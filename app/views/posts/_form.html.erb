<% if @post.errors.any? %>
 <ol>
   <% @post.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
 </ol>
 <% end %>

<%= form_for @post, html: {multipart: true} do |f| %>
  <fieldset>
    <div class="label"><%= f.label :title %></div>
    <%= f.text_field :title %>
  </fieldset>
  <fieldset>
    <div class="label"><%= f.label :description %></div>
    <%= f.text_area :description, size: "42.5x12" %>
  </fieldset>
  <fieldset>
    <div class="label"><%= f.label :location %></div>
    <%=  f.text_field :location, :placeholder => 'suburb/street name' %>
  </fieldset>
  <fieldset>
    <span class="checkbox"><%= f.label :vegetarian %></span>
    <span class="checkbox"><%= f.check_box( :vegetarian)%></span>
  </fieldset>
  <fieldset>
    <span class="checkbox"><%= f.label :availability, 'Tick when no longer available' %></span>
    <span class="checkbox"><%= f.check_box( :availability)%></span>
  </fieldset>
  <fieldset>
    <div class="label"><%= f.label :portion %></div>
    <%=  f.text_field :portion, :placeholder => 'eg. 1 person' %>
  </fieldset>
  <fieldset>
    <div class="label"><%= f.label :image %></div>
    <%= file_field_tag :image_url  %>
  </fieldset>
  <fieldset class="submit">
    <%= f.submit %>
  </fieldset>

<% end %>
